{
  "manifest_version": 3,
  "name": "Lofi Lounge",
  "version": "1.0",
  "description": "Play lofi music while studying.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "background",
    "windows",
    "offscreen",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
